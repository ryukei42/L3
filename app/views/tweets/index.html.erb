<span style= "color: green">
<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
</span>

<table>
<% @tweets.each do |t| %>
<tr>
    <td><%= t.message %></td>
    <td><%= ((Time.current - t.tdate) / 60).to_i. to_s %>分前</td>
    <td>
        <%= link_to '表示', "/tweets/#{t.id}" %>
        <%= link_to '削除', "/tweets/#{t.id}", method: :delete %>
        <%= link_to '編集', "/tweets/#{t.id}/edit" %>
    </td>
</tr>
<% end %>
</table>

<%= link_to 'つぶやく', '/tweets/new' %>